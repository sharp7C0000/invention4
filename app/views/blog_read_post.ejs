<%- include('header', {css:""}) %>

<style>
paper-dropdown {
  position  : absolute!important;
  top       : 0px!important;
  right     : -200px!important;
  min-width : 180px!important;
  min-height :64px!important;
}
</style>

<core-header-panel flex>

  <% include blog_topbar %>

  <div ng-controller="BlogReadPost">

    <div id="contents">

      <paper-shadow class="content-box" z="1">
        <h1><a href="#" ng-click="clickTitle($event)"><%= post.title %></a></h1>

        <p class="date-and-autor">
          <!--<core-icon icon="today"></core-icon>&nbsp;-->
          <%= post["publish_date"] %>&nbsp;
          |&nbsp;&nbsp;By <%= authorName %>
        </p>

        <div class="post-contents">
          <%- post.contents %>
        </div>

      </paper-shadow>

      <div class="nav-buttons">
        <paper-button raised ng-click="clickBack($event)">
          GO BACK
        </paper-button>
        <paper-button raised ng-click="clickShare($event)">
          SHARE

          <paper-dropdown class="dropdown" transition="" id="userinfo">
            <div class="soc" data-size="80px" data-buttoncolor="#999" data-iconcolor="#000">
              <a social-twitter class="soc-twitter" title="Twitter"></a>
              <a social-facebook class="soc-facebook" title="Facebook"></a>
              <a social-gplus class="soc-google" title="Google plus"></a>
            </div>

          </paper-dropdown>

        </paper-button>


      </div>


    </div>

  </div>

</core-header-panel>

<script src="/components/requirejs/require.js" data-main="/js/blog_read_post.js"></script>

<% include footer %>
