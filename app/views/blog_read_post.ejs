<%- include('header', {css:""}) %>

<style>
paper-dropdown {
  position  : absolute!important;
  top       : 38px!important;
  right     : 10px!important;
  min-width : 180px!important;
  min-height:120px!important;
}
</style>

<core-header-panel flex>

  <% include blog_topbar %>

  <div ng-controller="BlogReadPost">

    <div id="contents">

      <paper-shadow class="content-box" z="1">
        <h1><a href="#" ng-click="clickTitle($event)"><%= post.title %></a></h1>

        <p class="date-and-autor">
          <!--<core-icon icon="today"></core-icon>&nbsp;-->
          <%= post["publish_date"] %>&nbsp;
          |&nbsp;&nbsp;By <%= authorName %> 
        </p>

        <div class="post-contents">
          <%- post.contents %>
        </div>

      </paper-shadow>

      <div class="nav-buttons">
        <paper-button raised ng-click="clickBack($event)">
          GO BACK
        </paper-button>
        <paper-button raised ng-click="clickShare($event)">
          SHARE

          <paper-dropdown class="dropdown" transition="" id="userinfo" halign="right">
          dddddd
        </paper-dropdown>

        </paper-button>


      </div>


    </div>

  </div>

</core-header-panel>

<script src="/components/requirejs/require.js" data-main="/js/blog_read_post.js"></script>

<% include footer %>
