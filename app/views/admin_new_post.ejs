<% include header %>

<style>
.CodeMirror {
  height:80px;
}
</style>

<core-header-panel flex>
  <% include topbar %>

  <div ng-controller="Admin">

    <div id="contents" style="max-width:780px;margin-left:auto;margin-right:auto;padding:20px;padding-top:40px;">

      <div style="color:#444;font-size:22px;color:magenta"><core-icon icon="create"></core-icon>New Post</div>

      
     <paper-button
        raised class="submit primary" style="margin-top:30px;">
        SUBMIT
      </paper-button>

       <paper-button
        raised class="submit" style="margin-top:30px;">
        CANCEL
      </paper-button>


      <paper-input-decorator 
        label="Title" 
       
      >
        <input name="username" is="paper-input"
          required 
          ng-model="formData.username" 
          ng-maxlength="10" 
          ng-minlength="4"
          ng-keydown="hideGlobalValidation()"
        >
      </paper-input-decorator>

    <div style="margin-right:auto;margin-left:auto;max-width:780px;padding:10px;margin:0px auto;height:100px;"><textarea id="editor" style="height:100px;" height="100px"></textarea></div>


  </div>

   </div>
  
  </div>
</core-header-panel>

<script src="/components/requirejs/require.js" data-main="/js/admin_new_post.js"></script>

<% include footer %>